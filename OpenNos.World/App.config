<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
    <section name="entityFramework" type="System.Data.Entity.Internal.ConfigFile.EntityFrameworkSection, EntityFramework, Version=6.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" requirePermission="false" />
    <section name="eventScheduler" type="OpenNos.GameObject.EventSchedule, OpenNos.GameObject" />
  </configSections>
  <connectionStrings>
    <add name="OpenNosContext" providerName="System.Data.SqlClient" connectionString="Data Source=localhost;Initial Catalog=opennos;Integrated Security=true" />
  </connectionStrings>
  <entityFramework>
    <defaultConnectionFactory type="System.Data.Entity.Infrastructure.LocalDbConnectionFactory, EntityFramework">
      <parameters>
        <parameter value="mssqllocaldb" />
      </parameters>
    </defaultConnectionFactory>
    <providers>
      <provider invariantName="System.Data.SqlClient" type="System.Data.Entity.SqlServer.SqlProviderServices, EntityFramework.SqlServer" />
    </providers>
  </entityFramework>
  <log4net>
    <appender name="ManagedColoredConsoleAppender" type="log4net.Appender.ManagedColoredConsoleAppender">
      <mapping>
        <level value="FATAL" />
        <foreColor value="Red" />
      </mapping>
      <mapping>
        <level value="ERROR" />
        <foreColor value="DarkRed" />
      </mapping>
      <mapping>
        <level value="WARN" />
        <foreColor value="Yellow" />
      </mapping>
      <mapping>
        <level value="INFO" />
        <foreColor value="Green" />
      </mapping>
      <mapping>
        <level value="DEBUG" />
        <foreColor value="DarkGreen" />
      </mapping>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="[%level] %date{HH:mm:ss} -- %message%newline" />
      </layout>
    </appender>
    <appender name="FileAppender" type="log4net.Appender.FileAppender">
      <file value="Log.txt" />
      <appendToFile value="true" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="[%date{yyyy-MM-dd HH:mm:ss.fff}] [%thread] %-5level %logger -- %message%newline" />
      </layout>
    </appender>
    <root>
      <level value="ALL" />
      <appender-ref ref="ManagedColoredConsoleAppender" />
      <appender-ref ref="FileAppender" />
    </root>
  </log4net>
  <appSettings>
    <add key="MasterAuthKey" value="OpenNosTest" />
    <add key="MasterPort" value="6969" />
    <add key="MasterIP" value="127.0.0.1" />
    <add key="Language" value="en" />
    <add key="WorldPort" value="1337" />
    <add key="IPADDRESS" value="127.0.0.1" />
    <add key="ServerGroup" value="S1-OpenNos" />
    <add key="SessionLimit" value="100" />
    <add key="SceneOnCreate" value="false" />
    <add key="WorldInformation" value="true" />
    <add key="RateXP" value="1" />
    <add key="RateHeroicXp" value="1" />
    <add key="RateGold" value="1" />
    <add key="GoldRateDrop" value="1" />
    <add key="MaxGold" value="1000000000" />
    <add key="RateDrop" value="1" />
    <add key="MaxLevel" value="99" />
    <add key="MaxJobLevel" value="80" />
    <add key="HeroicStartLevel" value="88" />
    <add key="MaxSPLevel" value="99" />
    <add key="MaxHeroLevel" value="50" />
    <add key="RateFairyXp" value="1" />
    <add key="MaxUpgrade" value="10" />
    <add key="UseMock" value="false" />
    <add key="LagMode" value="false" />
  </appSettings>
  <eventScheduler>
    <schedule event="LOD" time="14:00" />
    <schedule event="LOD" time="19:00" />
    <schedule event="RANKINGREFRESH" time="03:00" />
    <schedule event="MINILANDREFRESHEVENT" time="00:00" />
    <schedule event="INSTANTBATTLE" time="01:55" />
    <schedule event="INSTANTBATTLE" time="03:55" />
    <schedule event="INSTANTBATTLE" time="05:55" />
    <schedule event="INSTANTBATTLE" time="07:55" />
    <schedule event="INSTANTBATTLE" time="09:55" />
    <schedule event="INSTANTBATTLE" time="11:55" />
    <schedule event="INSTANTBATTLE" time="13:55" />
    <schedule event="INSTANTBATTLE" time="15:55" />
    <schedule event="INSTANTBATTLE" time="17:55" />
    <schedule event="INSTANTBATTLE" time="19:55" />
    <schedule event="INSTANTBATTLE" time="21:55" />
    <schedule event="INSTANTBATTLE" time="23:55" />
  </eventScheduler>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7" />
  </startup>
  <runtime>
    <gcServer enabled="true" />
  </runtime>
</configuration>
